<h1>UPDATE TAG</h1>

<%= form_with(model: @tag, local: true) do |form| %>
    <% if @tag.errors.any? %>
        <div id="error">
            <h2>
            <%= pluralize(@tag.errors.count, "error") %> occured !
            </h2>
            <ul>
                <% @tag.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
    </div>
    <%= form.submit %>
    <%end%>
    <%= link_to "Back", tags_path %>